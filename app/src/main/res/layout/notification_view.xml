<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51000000">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iconIV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iconIV"
            android:layout_toEndOf="@+id/iconIV"
            android:layout_alignBottom="@+id/iconIV"
            android:layout_alignTop="@+id/iconIV">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Snapchat"
                android:id="@+id/appNameTV"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight=".5"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Here is where the details will go."
                android:id="@+id/detailsTV"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight=".5"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:layout_below="@+id/content_layout"
        android:background="@drawable/transparent_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"/>

</RelativeLayout>